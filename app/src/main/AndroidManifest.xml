<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nathannguyen.learnvietnamese">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Language App"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NumberActivity"
            android:label="Numbers"
            android:theme="@style/NumberTheme"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".FamilyActivity"
            android:label="Family"
            android:theme="@style/FamilyTheme"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".PhraseActivity"
            android:label="Phrases"
            android:theme="@style/PhraseTheme"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".ColorActivity"
            android:label="Colors"
            android:theme="@style/ColorTheme"
            android:parentActivityName=".MainActivity"></activity>
    </application>

</manifest>